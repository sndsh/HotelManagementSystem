@model HotelManagementSystem.Areas.DashBoard.ViewModel.AccomodationPackagesActionModel

@if (Model != null)
{
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">
                @if (Model.ID > 0)
                {
                    <span>Edit Accomodation Package</span>
                }
                else
                {
                    <span>Create Accomodation Package</span>
                }
            </h5>

            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <form id="actionForm">
                <input type="hidden" name="ID" value="@Model.ID" />
                <div class="form-group">
                    <label>Accomodation Type</label>
                    <select class="form-control" name="AccomodationTypeID">
                        @if (Model.AccomodationTypes != null)
                        {
                            foreach (var accomodationType in Model.AccomodationTypes)
                            {
                                <option value="@accomodationType.ID" @(accomodationType.ID == Model.AccomodationTypeID ? "selected" : string.Empty)>@accomodationType.Name</option>
                            }
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label>Name</label>
                    <input class="form-control" name="Name" placeholder="Enter Accomodation Package Name" value="@Model.Name">
                </div>
                <div class="form-group">
                    <label>No.OfRooms</label>
                    <input class="form-control" name="NoOfRooms" placeholder="Enter Number of Rooms" value=" @Model.NoOfRooms">
                    @*<textarea class="form-control" name="Description" placeholder="Enter Accomodation Rooms Number."> @Model.NoOfRooms</textarea>*@
                </div>
                <div class="form-group">
                    <label>FeePerNight</label>
                    <input class="form-control" name="FeePerNight" placeholder="Enter Fees Per Night" value=" @Model.FeePerNight">
                    @*<textarea class="form-control" name="Description" placeholder="Enter Accomodation Package Fees per Night."> @Model.FeePerNight</textarea>*@
                </div>
                <div class="form-group">
                    <label>Pictures</label>
                    <input id="selectPictures" class="form-control" name="Pictures" type="file" multiple>
                    <input type="hidden" name="pictureIDs" id="pictureIDs" value="" />
                </div>
                <div id="picturesArea">
                    @if (Model.AccomodationPackagePictures != null && Model.AccomodationPackagePictures.Count > 0)
                    {
                        foreach (var accomodationPackagePicture in Model.AccomodationPackagePictures)
                        {
                            <img src="/images/site/@accomodationPackagePicture.Picture.URL"  data-id="@accomodationPackagePicture.PictureID" class="img-fluid" style="width:200px" onclick="removeMe(this)" />
                        }

                    }
                </div>
            </form>
            <div class="errorDiv">

            </div>
        </div>
        <div class="modal-footer">
            <button id="actionButton" type="button" class="btn btn-primary"><i class="fas fa-save mr-1"></i>Save changes</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fas fa-window-close mr-1"></i>Close</button>
        </div>
    </div>
}

    <div id="imageTemplate">
        <img src="" class="img-fluid" style="width:200px" onclick="removeMe(this)"/>
    </div>


<script>
    $("#actionButton").click(function () {

        var pictureIDs = [];
        $("#picturesArea img").each(function () {
            var picID = $(this).attr("data-id");
            pictureIDs.push(picID);           
        });

        $("#pictureIDs").val(pictureIDs.join());    //


         $.ajax({
             url: '@Url.Action("Action","AccomodationPackages")',
             type:"post",
             data: $("#actionForm").serialize()
        })
            .done(function (response) {
                if (response.Success)
                {
                    location.reload();
                }
                else {
                    $(".errorDiv").html(response.Message);
                }
            });
    });

    $("#selectPictures").change(function () {

        var pictures = this.files;        //returns list of files selected

        var formData = new FormData();
        for (var i = 0; i < pictures.length; i++) {
            formData.append("Picture", pictures[i]);
        }
        debugger;
         $.ajax({
             url: '@Url.Action("UploadPictures","Dashboard")',
             type: "post",
             data: formData,
             processData: false,
             contentType: false
        })
            .done(function (response) {
                // debugger;
                for (var i = 0; i < response.length; i++) {
                    var picture = response[i];

                    var $imgHTML = $("#imageTemplate").clone();
                    $imgHTML.find("img").attr("src", "/images/site/" + picture.URL);
                    $imgHTML.find("img").attr("data-id",picture.ID);
                    $("#picturesArea").append($imgHTML.html());
                }
            });
    });

    function removeMe(element) {
        element.remove();
    }
</script>

